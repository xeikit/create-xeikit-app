{
  "name": "create-xeikit-app",
  "type": "module",
  "version": "1.0.0",
  "author": "XeicuLy",
  "description": "CLI tool for scaffolding projects with xeikit/starter templates.",
  "keywords": ["cli"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xeikit/create-xeikit-app.git"
  },
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "release": "pnpm lint:fix && pnpm build && changelogen --release --push",
    "biome": "biome check .",
    "biome:fix": "biome check --write .",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm biome && pnpm prettier && pnpm typecheck",
    "lint:fix": "pnpm biome:fix && pnpm prettier:fix && pnpm typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "changelogen": "0.6.1",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "typescript": "5.8.3",
    "unbuild": "3.5.0"
  },
  "lint-staged": {
    "**/*.{css,js,ts,cjs,mjs,cts,mts,jsx,tsx,json,jsonc}": ["biome check --write --no-errors-on-unmatched"],
    "**/*.{md,html,yaml,yml}": ["prettier --write"]
  },
  "packageManager": "pnpm@10.11.0",
  "volta": {
    "node": "22.15.1",
    "pnpm": "10.11.0"
  }
}
